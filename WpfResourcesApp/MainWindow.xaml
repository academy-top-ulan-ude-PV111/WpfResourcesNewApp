<Window x:Class="WpfResourcesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfResourcesApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="brRed" Color="Red"/>
        <LinearGradientBrush x:Key="brRedToGreen" 
                             StartPoint="0,0"
                             EndPoint="0,1">
            <GradientStop Color="#234567" Offset="0.1"/>
            <GradientStop Color="DarkRed" Offset="0.8"/>
            <GradientStop Color="Red" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>
    <StackPanel>
        <!--
        <Button Content="Button1"
            Background="{StaticResource brRed}"/> -->
        <Button Content="Button2"
                Height="100"
            Background="{StaticResource brRedToGreen}"/>
    </StackPanel>
</Window>
